{
	"name": "SQL_Scale",
	"properties": {
		"activities": [
			{
				"name": "If Condition1",
				"type": "IfCondition",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@equals(pipeline().parameters.flgcalled,1)",
						"type": "Expression"
					},
					"ifTrueActivities": [
						{
							"name": "ScaleActivityAPI",
							"type": "WebActivity",
							"dependsOn": [],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"method": "PUT",
								"url": "https://management.azure.com/subscriptions/e583c6f4-b206-4e2c-9b1c-c305cc06dd08/resourceGroups/RG-SQLDataFoundation/providers/Microsoft.Sql/servers/pngdatafoundation/databases/db_PG_DMS_TeleCalling?api-version=2021-02-01-preview",
								"body": {
									"value": "{\n\tlocation: \"eastus2\",\n    \"sku\": {\n    \"name\": \"@{pipeline().parameters.Scaleval}\",\n    \"tier\": \"@{pipeline().parameters.tier}\"\n    }\n}",
									"type": "Expression"
								},
								"authentication": {
									"type": "MSI",
									"resource": "https://management.core.windows.net"
								}
							}
						}
					]
				}
			}
		],
		"parameters": {
			"Scaleval": {
				"type": "string",
				"defaultValue": "S7"
			},
			"tier": {
				"type": "string",
				"defaultValue": "Standard"
			},
			"flgcalled": {
				"type": "int",
				"defaultValue": 1
